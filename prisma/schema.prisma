// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// üì¶ PRODUCTOS
model Product {
  id          String   @id @default(uuid())
  title       String
  description String
  slug        String   @unique // Para URLs amigables: /producto/globo-metalico
  price       Decimal  @default(0) @db.Decimal(10, 2) // 10 d√≠gitos, 2 decimales
  stock       Int      @default(0)
  images      String[] // Array de URLs de Cloudinary

  isAvailable Boolean  @default(true) // üëà NUEVO: Por defecto, todo nace visible
  
  category    Category @relation(fields: [categoryId], references: [id])
  categoryId  String

  orderItems  OrderItem[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// üóÇÔ∏è CATEGOR√çAS
model Category {
  id    String @id @default(uuid())
  name  String
  slug  String @unique

  products Product[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// üõçÔ∏è PEDIDOS (CARRITO CONVERTIDO EN ORDEN)
model Order {
  id            String      @id @default(uuid())
  totalAmount   Decimal     @db.Decimal(10, 2)
  totalItems    Int
  status        OrderStatus @default(PENDING)
  isPaid        Boolean     @default(false)
  
  // Datos del cliente (Simple para MVP, sin auth compleja a√∫n)
  clientName    String
  clientPhone   String      // Para WhatsApp
  
  orderItems    OrderItem[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

// DETALLE DEL PEDIDO
model OrderItem {
  id        String  @id @default(uuid())
  quantity  Int
  price     Decimal @db.Decimal(10, 2) // Precio al momento de la compra (snapshot)

  order     Order   @relation(fields: [orderId], references: [id])
  orderId   String

  product   Product @relation(fields: [productId], references: [id])
  productId String
}

// ESTADOS DEL PEDIDO
enum OrderStatus {
  PENDING
  PAID
  DELIVERED
  CANCELLED
}

// üë§ USUARIOS (ADMINISTRADORES)
model User {
  id            String    @id @default(uuid())
  name          String
  email         String    @unique
  password      String    // Aqu√≠ se guardar√° el hash (ej: $2b$10$...)
  role          Role      @default(USER)
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

enum Role {
  ADMIN
  USER
}

model StoreConfig {
  id             String   @id @default(uuid())
  whatsappPhone  String   @default("51999999999")
  welcomeMessage String   @default("Hola FiestasYa, quiero consultar por...")
  
  updatedAt      DateTime @updatedAt
}